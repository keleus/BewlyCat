{
  "name": "bewly-cat",
  "displayName": "BewlyCat",
  "type": "module",
  "version": "1.3.11",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "description": "Just make a few small changes to your Bilibili homepage.",
  "homepage": "https://github.com/keleus/BewlyCat",
  "scripts": {
    "build-pack": "pnpm build && pnpm build-firefox && pnpm pack:zip && pnpm pack:zip-firefox",
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "npm run clear-firefox && cross-env NODE_ENV=development FIREFOX=true run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "dev:inject": "npm run build:inject -- --mode development",
    "dev:bg": "tsup --watch ./src",
    "build": "cross-env NODE_ENV=production run-s clear build:prepare build:js build:inject build:bg",
    "build-safari": "cross-env NODE_ENV=production SAFARI=true run-s clear-safari build:prepare build:js build:inject build:bg",
    "build-firefox": "cross-env NODE_ENV=production FIREFOX=true run-s clear-firefox build:prepare build:js build:inject build:bg",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "build:inject": "vite build --config vite.config.inject.ts",
    "build:bg": "tsup",
    "convert-safari": "xcrun safari-web-extension-converter ./extension-safari --project-location ./extension-safari-macos --macos-only",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:zip-firefox": "rimraf extension-firefox.zip && jszip-cli add extension-firefox/* -o ./extension-firefox.zip",
    "pack:zip-firefox-sources": "rimraf extension-firefox-sources.zip && git archive HEAD -o extension-firefox-sources.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ FIREFOX=true web-ext build --source-dir ./extension-firefox --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium --watch-file=\"*.js\" --ignore-files=\"*.log,*.sqlite,*.ldb,*.tmp\"",
    "start:firefox": "web-ext run --source-dir ./extension-firefox --target=firefox-desktop",
    "clear": "rimraf --glob extension extension.*",
    "clear-firefox": "rimraf --glob extension-firefox extension-firefox.*",
    "clear-safari": "rimraf --glob extension-safari extension-safari.*",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest test",
    "typecheck": "vue-tsc",
    "postinstall": "npx simple-git-hooks",
    "knip": "knip",
    "submit": "run-p submit:*",
    "submit:chrome": "pnpm wxt submit --chrome-zip ./extension.zip",
    "submit:firefox": "pnpm wxt submit --firefox-zip ./extension-firefox.zip --firefox-sources-zip ./extension-firefox-sources.zip"
  },
  "dependencies": {
    "@types/md5": "^2.3.5",
    "dompurify": "^3.2.6",
    "md5": "^2.3.0",
    "mitt": "^3.0.1",
    "overlayscrollbars": "^2.11.5",
    "overlayscrollbars-vue": "^0.5.9",
    "pinia": "^3.0.3",
    "qrcode.vue": "^3.6.0",
    "vue-i18n": "^11.1.11",
    "vue-toastification": "2.0.0-rc.5",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@ffflorian/jszip-cli": "^3.8.6",
    "@iconify/json": "^2.2.376",
    "@iconify/vue": "^5.0.0",
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@rollup/plugin-replace": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.0",
    "@types/webextension-polyfill": "^0.12.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vueuse/core": "^13.7.0",
    "chokidar": "^4.0.3",
    "cross-env": "^10.0.0",
    "crx": "^5.0.1",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "esno": "^4.8.0",
    "fs-extra": "^11.3.1",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "kolorist": "^1.8.0",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "release-it": "^19.0.4",
    "release-it-pnpm": "^4.6.6",
    "rimraf": "^6.0.1",
    "sass": "^1.90.0",
    "simple-git-hooks": "^2.13.1",
    "terser": "^5.43.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "unocss": "^66.4.2",
    "unplugin-auto-import": "^20.0.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vue": "^3.5.19",
    "vue-tsc": "^3.0.5",
    "web-ext": "^8.9.0",
    "webextension-polyfill": "^0.12.0",
    "wxt": "^0.20.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "webExt": {
    "run": {
      "keepProfileChanges": true,
      "firefoxProfile": "./firefox-web-ext-profile",
      "chromiumProfile": "./chromium-web-ext-profile",
      "startUrl": [
        "https://www.bilibili.com/"
      ]
    }
  }
}
